.slide-con{
  height: 8rpx;
  width: 100%;
  border-radius: 4rpx;
  position: relative;
  box-sizing: border-box;
}
.slide-con .slide-bar{
  height: 100%;
  background: #f8f7f9;
}
.slide-rang{
  position: absolute;
  width: 0;
  height: 100%;
  background: #fb3f04;
  top: 0;
  left: 0;
}
.slide-item{
  top: 50%;
  margin-top: -24rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: url(data:image/png;base64,);
  background-size: cover;
}
.slide-item.hover{
  transform: scale(1.5)
}